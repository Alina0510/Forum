@model Forum.Models.UserInput

<div class="m-3"><h2>Registration</h2></div>
@if (ViewBag.Error != null)
{
    <p>@ViewBag.Error</p>
}

<form asp-action="registration" asp-controller="home">
    <div class="m-3">
        <p>
            <label class="form-label" asp-for="Nickname">Nickname</label><br />
            <input class="form-control" type="text" asp-for="Nickname" />
            <span asp-validation-for="Nickname" />
        </p>
    </div>
    <div class="m-3">
        <p>
            <label class="form-label" asp-for="Email">Email</label><br />
            <input class="form-control" type="email" asp-for="Email" />
            <span asp-validation-for="Email" />
        </p>
    </div>
    <div class="m-3">
        <p>
            <label class="form-label" asp-for="Password">Password</label><br />
            <input class="form-control" type="password" asp-for="Password" />
            <span asp-validation-for="Password" />
        </p>
    </div>
    <div class="m-3">
        <p>
            <label class="form-label" asp-for="ConfirmPassword">Repeat your Password</label><br />
            <input class="form-control" type="password" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </p>
    </div>
    <div class="m-3">
        <p>
            <input type="submit" class="btn btn-primary" value="Submit" />
        </p>
    </div>
</form>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>